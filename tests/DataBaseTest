<?php
class MySQLTest extends PHPUnit_Extensions_Database_TestCase
{
    static private $pdo = null;
    private $conn = null;

    public function getConnection()
    {
        if ($this->conn == null) {
            if (self::$pdo == null) {
                self::$pdo = new PDO('mysql:host=localhost; dbname=supemash', 'omelchenko', 'F7b!Cd');
            }
            $this->conn = $this->createDefaultDBConnection(self::$pdo, 'supermash');
        }
        return $this->conn;
    }

    public function getDataSet()
    {
        return new MyApp_DbUnit_ArrayDataSet(array(
            'test_table' => array(
                array(),
                array(),
            ),
        ));
    }

}
